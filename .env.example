# MCP Tools Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=3001
MCP_CONNECTION_TYPE=streamable-http

# Authentication Configuration (Bearer Token)
MCP_AUTH_ENABLED=false
MCP_AUTH_METHOD=bearer
MCP_TOKEN_ISSUER=local-auth
MCP_TOKEN_AUDIENCE=fastmcp-tools
MCP_REQUIRED_SCOPES=read
MCP_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
Your Public Key Here
-----END PUBLIC KEY-----"

# Rate Limiting
MCP_RATE_LIMIT_ENABLED=true
MCP_RATE_LIMIT_RPM=100

# GitHub Configuration (Optional - for GitHub tools)
# Get your token from: https://github.com/settings/tokens
GITHUB_PAT="Your GitHub Personal Access Token Here"
GITHUB_API_BASE_URL=https://github.com/api/v3
GITHUB_API_TIMEOUT=30.0
GITHUB_SSL_VERIFY=true

# Web Scraper Configuration
WEB_SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
WEB_SCRAPER_TIMEOUT=30.0
WEB_SCRAPER_MAX_RETRIES=3
WEB_SCRAPER_DELAY_BETWEEN_REQUESTS=1.0
WEB_SCRAPER_MAX_CONTENT_SIZE=10485760
WEB_SCRAPER_RESPECT_ROBOTS_TXT=true
WEB_SCRAPER_ENABLE_JAVASCRIPT=false
WEB_SCRAPER_SSL_VERIFY=true
WEB_SCRAPER_BLOCKED_DOMAINS=
WEB_SCRAPER_ALLOWED_CONTENT_TYPES=text/html,application/xhtml+xml,text/plain
WEB_SCRAPER_MAX_CONCURRENT_REQUESTS=5
WEB_SCRAPER_RATE_LIMIT_PER_MINUTE=60

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
